{% if page.header.section.settings.module.enabled %}
</div></div>

{% set selfid = 'module-' ~ page.template|md5|slice(0, 8) ~ '-' ~ page.slug|md5|slice(0, 8)  %}
<div class="contact-area {{selfid}}">
    <div class="container"><div class="container-inner">
        <div class="address-wrapper">
            <div class="secondary-title {{selfid}} address-blk {{selfid}} border_radius_sm mb-0">


                {# check if page.header.section.settings.subtitle.hsize is a number from 1 to 6 #}
                {% set subhsize = 6 %}
                {% if page.header.section.settings.subtitle.hsize is number %}
                    {% if page.header.section.settings.subtitle.hsize > 0 and page.header.section.settings.subtitle.hsize < 7 %}
                        {% set subhsize = page.header.section.settings.subtitle.hsize %}
                    {% endif %}
                {% endif %}
                {% set hsize = 3 %}
                {% if page.header.section.settings.title.hsize is number %}
                    {% if page.header.section.settings.title.hsize > 0 and page.header.section.settings.title.hsize < 7 %}
                        {% set hsize = page.header.section.settings.title.hsize %}
                    {% endif %}
                {% endif %}

                <h{{subhsize}} class="subh">{{page.header.section.content.left.subtitle}}</h{{subhsize}}>       
                <h{{hsize}}>{{page.header.title}}</h{{hsize}}>



                <div class="content_wrap cmn-content">
                    {{page.header.section.text|markdown }}
                </div>

            </div>
            {% if page.header.section.settings.map.show %}
            <div class="map-blk box_shadow_black036_16 section-map modular section-map">
                {% if page.header.scale == 1 %}
                    {% set scale = 3 / 4 %}
                {% elseif page.header.scale == 2 %}
                    {% set scale = 9 / 16 %}
                {% elseif page.header.scale == 3 %}
                    {% set scale = 1 / 2.35 %}
                {% elseif page.header.scale == 4 %}
                    {% set scale = 1 / 1 %}
                {% elseif page.header.scale == 5 %}
                    {% set scale = 4 / 3 %}
                {% endif %}
                {% if theme_var('map.type') == 'google' %}
                    <div class="media-container">
                        <div class="js-map media" data-scale="{{ scale }}"
                            map-style='{{ page.header.map.style }}'
                            map-controls='{{ page.header.map.controls }}'
                            map-lat='{{ page.header.map.latitude }}'
                            map-markertitle='{{ page.header.map.markertitle }}'
                            map-infowindow='<div class="poi-info-window gm-style"><div class="title">{{ page.header.map.markertitle }}</div><div class="address">{{ page.header.map.infowindow|nl2br }}</div></div>'
                            map-lon='{{ page.header.map.longitude }}'
                            map-zoom='{{ page.header.map.zoom }}' style="height:416px"></div>
                    </div>
                {% elseif theme_var('map.type') == 'osm' %}
                    <div class="media-container">
                        <div class="js-map media" data-scale="{{ scale }}" id="js-map"
                            map-lat='{{ page.header.map.latitude }}'
                            map-lon='{{ page.header.map.longitude }}'
                            map-zoom='{{ page.header.map.zoom }}'
                            map-markertitle='{{ page.header.map.markertitle }}'
                            map-infowindow='{{ page.header.map.infowindow | nl2br}}'
                            map-controls='{{ page.header.map.controls }}' style="height:416px"><div class="js-map-popup" id="popup"></div></div>
                    </div>
                {% endif %}

                {# <iframe class="d-block w-100 border_radius_sm"
                    src="{{page.header.section.content.right.map.script}}"
                    width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"></iframe> #}
            </div>
            {% endif %}
        </div>
    </div></div>
    
 <div class="container"><div class="container-inner">
</div>
{% endif %}

<style>
{% if page.header.section.settings.bgcolor %}
.contact-area.{{selfid}}{
    background-color: {{page.header.section.settings.bgcolor}};
}
{% endif %}
{% if page.header.section.settings.bgaddblk %}
.address-blk.{{selfid}}{
    background-color: {{page.header.section.settings.bgaddblk}};
}
{% endif %}
{% if page.header.section.settings.title.fontsize %}
.secondary-title.{{selfid}} h3{
    font-size: {{page.header.section.settings.title.fontsize}}px;
}
{% endif %}
{% if page.header.section.settings.subtitle.fontsize %}
.secondary-title.{{selfid}} h6{
    font-size: {{page.header.section.settings.subtitle.fontsize}}px;
}
{% endif %}


</style>
