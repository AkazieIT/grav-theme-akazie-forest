<style type="text/css">

:root {
    --bg: {{ theme_var('style.color.background.main') }};
    --primary: {{ theme_var('style.color.background.primary') }};
    --primaryDark: {{ theme_var('style.color.background.secondary' )}};
    --primaryLight: {{ theme_var('style.color.background.third' )}};
    --tertiary: {{ theme_var('style.color.background.tertiary') }};

    --secondary: {{ theme_var('style.color.text.main') }};
    --secondaryDark: {{ theme_var('style.color.text.primary') }};
    --secondaryLight: {{ theme_var('style.color.text.secondary') }};


/* replace --barlow with
--mainFont
--navFont
--footerFont
--hFont
*/


--mainFont: {{ theme_var('style.fonts.main') | raw }};
--subhFont: {{ theme_var('style.fonts.nav') | raw }};
--navfooterFont: {{ theme_var('style.fonts.footer') | raw }};
--hmFont: {{ theme_var('style.fonts.h') | raw}}



}

body {
    background-color: {{ theme_var('style.color.background.main') }};
    font-weight: 400;
    color: var(--secondaryDark);
}

h1,
h2,
h3,
h4,
h5,
h6{
    color: var(--secondaryDark);
}

a:hover{
    color: {{ theme_var('style.color.text.primary') }};
}

    {% if theme_var('site.maxwidth') >= 999 and theme_var('site.maxwidth') < 2001  %}
        @media screen and (min-width: 992px) {
            .container-inner  { max-width: {{ theme_var('site.maxwidth') }}px; }
            #blog-hero  { max-width: {{ theme_var('site.maxwidth') }}px; }
            #portfolio-hero  { max-width: {{ theme_var('site.maxwidth') }}px; }
        }
    {% endif %}

    {# TODO: MAXWIDTH #}

    {% if theme_var('nav.navheight') >= 20 and theme_var('nav.navheight') < 206 %}
        @media screen and (min-width:992px) {
            header.header-area { height: {{ theme_var('nav.navheight') }}px!important; padding: 15px 0px;}
            header.header-area  div.header-inner img#headerlogo {
                height: {{ theme_var('nav.navheight') - 30 }}px; }
            header.header-area  div.header-inner ul li a { line-height: {{ theme_var('nav.navheight') - 50 }}px!important; }
            header.header-area  div.header-inner ul li.specialbutton a {    line-height: 60px !important;  }
            header.header-area  div.header-inner ul li.specialbutton { padding: {{ (theme_var('nav.navheight') / 2) - 30 }}px 0px; }
            header.header-area .custom-btn{height: {{ theme_var('nav.navheight') - 30 }}px;}
            .mobile_menu-inner { padding-top: {{ theme_var('nav.navheight') }}px; }
        }
    {% endif %}

    {% if( theme_var('nav.mobileheightenabled') ) %}
        @media screen and (max-width:992px) {
            header.header-area { height:{{ theme_var('nav.mobilenavheight') }}px; padding: 15px 0px;}
            header.header-area div.header-inner img#headerlogo { height:{{ theme_var('nav.mobilenavheight') - 30 }}px; }
        }
    {% endif %}    

    {% if( theme_var('site.sectionwrappadding') ) %}
        .section_wrap {
            padding: {{ theme_var('site.sectionwrappadding') }};
        }
    {% endif %}
    
    {% if( theme_var('site.sectionwrappaddingmobile') ) %}

        @media screen and (max-width:992px) {
            .section_wrap {
                padding: {{ theme_var('site.sectionwrappaddingmobile') }};
            }
        }
    {% endif %}



    {% if( theme_var('footer.bottom.enabled') ) %}
        .footer-bottom {
            background-color: {{ theme_var('footer.bottom.bgcolor') }};
            color:{{ theme_var('footer.bottom.color') }};
        }
        .footer-bottom p{
            color:{{ theme_var('footer.bottom.color') }};
        }    
        .ft-links li a{
            color:{{ theme_var('footer.bottom.color') }};
        }
    {% endif %}    
 
    .footer-top {
        background-color: {{ theme_var('footer.top.bgcolor') }};
        color:{{ theme_var('footer.top.color') }};
    }
    .ft-widget-first h3{
        color:{{ theme_var('footer.top.color') }};        
    }
    .ft-widget h3{
        color:{{ theme_var('footer.top.color') }};
    }
    .ft-nv li a{
        color:{{ theme_var('footer.top.color') }};
    }
    .ft-nv li{
        color:{{ theme_var('footer.top.color') }};
    }
    .ft-widget p{
        color:{{ theme_var('footer.top.color') }};        
    }
</style>